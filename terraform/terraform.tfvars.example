# Project Configuration
project_name = "asap-pdf"
environment  = "production"

# GitHub Configuration
github_repository = "your-org/your-repo"  # Required: Format "owner/repo"

# Application Configuration
rails_master_key = "your-rails-master-key"  # Required: From config/master.key

# Network Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.3.0/24", "10.0.4.0/24"]

# Database Configuration
db_instance_class    = "db.t3.small"
db_allocated_storage = 20
db_name             = "access_pdf_production"
db_username         = "asap_pdf"

# Redis Configuration
redis_node_type = "cache.t3.micro"
redis_port      = 6379

# ECS Configuration
ecs_instance_type = "t3.small"
ecs_min_size      = 1
ecs_max_size      = 2
container_port    = 80
container_cpu     = 256
container_memory  = 512
